---
const { title } = Astro.props;
---

<!doctype html>
<html lang="no">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://rsms.me/">
		<link rel="stylesheet" href="https://rsms.me/inter/inter.css">
		<title>{title} Beta</title>
		<meta property="og:title" content="Offentlig frontend Norge">
		<meta name="description" content="Hjemmeside for offentlig frontend Norge - en sammenslutning av frontend-utviklere i offentlige bedrifter">
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	
	:root { 
		font-family: 'Inter', sans-serif;
		font-size: 16px;
		background: #074E7E;
		color: white;
	}

	@supports (font-variation-settings: normal) {
  	:root { 
			font-family: 'Inter var', sans-serif; 
		}
	}

	*, :before, :after {
		box-sizing: border-box;
	}

	
</style>
